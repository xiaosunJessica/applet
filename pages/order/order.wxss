/* pages/order/order.wxss */
.nav-list {
  margin: 0 auto;
  background: #27ABFB;
  text-align: center;
  height: 180rpx;
}
.item {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 20rpx;
  border-radius: 50%;
}
.icon {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto;
}

.train {
  background: url(http://www.moepan.net/uploads/2018022416231240602217.png) no-repeat;
  background-position: -0rpx -110rpx;
}
.airplane {
  background: url(http://www.moepan.net/uploads/2018022416231240602217.png) no-repeat;
  background-position: -110rpx -110rpx;
}
.bus {
  background: url(http://www.moepan.net/uploads/2018022416231240602217.png) no-repeat;
  background-position: -220rpx -110rpx;
}

.active {
  background-color: #FFFFFF;
}